{% extends 'base.html.twig' %}

{% block title %}Gérer mes adresses - Brunch Go{% endblock %}

{% block main %}
<h1>Gérer mes adresses</h1>
<a href="{{ path('app_account_address') }}" class="mx-5"  style="text-decoration:none;">Retour</a>
{{ form_start(form) }}
    <div class="row mx-5">
        <div class="col-md-12">{{ form_row(form.name) }}</div>

        <div class="col-md-6">{{ form_row(form.address) }}</div>
        <div class="col-md-6">{{ form_row(form.postal) }}</div>
        <div class="col-md-6">{{ form_row(form.city) }}</div>
        <div class="col-md-6">{{ form_row(form.phone) }}</div>
    </div>
    {% for message in app.flashes('error') %}
    <div class="alert alert-danger container text-center">
        {{ message }}
    </div>
{% endfor %}

    {{ form_end(form) }}
    <hr>  

{% endblock %}
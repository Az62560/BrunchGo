{% extends 'base.html.twig' %}

{% block title %}Mon panier - Brunch Go{% endblock %}

{% block main %}
<div class="container">
    <h1 class="mb-4">Panier</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Formule</th>
                <th scope="col">Produits</th>
                <th scope="col">Prix</th>
            </tr>
        </thead>
        <tbody>
            {% if selectedProducts is not empty %}
                <tr>
                    <td>{{ formuleName }}</td> {# Affiche le nom de la formule #}
                    
                    <td>
                        {% for categoryProducts in selectedProducts %}
                            {% for product in categoryProducts %}
                                <li>{{ product.name }}</li>
                            {% endfor %}
                        {% endfor %}   
                    </td>
                    <td>{{ (formulePrice / 100)|number_format(2, ',', ' ') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun produit sélectionné.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}


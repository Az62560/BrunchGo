{% extends 'base.html.twig' %}

{% block title %}Connexion - Brunch Go{% endblock %}

{% block main %}
<div class="background py-3">
<div class="card mx-5 py-5" style="width: 30rem;">
<div class="form">
<form method="post">
  <div class="card-header">
    <h1 class="h3 mb-3 font-weight-normal">Identifiez vous</h1>
  </div>
  <div class="card-body">
    <h5 class="card-title">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% endif %}
    </h5>
    <p class="card-text"><label for="inputEmail">Email</label>
    <input type="email" placeholder="Veuillez saisir votre adresse email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <br>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" placeholder="Veuillez saisir votre mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" class="form-check-input" type="checkbox">
    <button class="mt-5 col-12 mx-auto btn btn-primary mt-5" type="submit">Connexion</button></p>
    <hr>
    <p class="text-center mt-5">Ou souhaitez vous <a href="{{ path('app_register') }}">créer un compte</a> ?</p>
  </div>   
</form>
</div>
</div>
</div>
{% endblock %}

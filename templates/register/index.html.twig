{% extends 'base.html.twig' %}

{% block title %}Inscription - Brunch Go{% endblock %}

{% block main %}
<div class="background py-3">
    <div class="card mx-4 py-4" style="width: 40rem;">
        <div class="card-header">
            <h1 class="h3 mb-3 font-weight-normal text-center">Inscrivez vous</h1> 
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {% if notification %}
                        <div class="alert alert-info">{{ notification }}</div>
                    {% endif %}
                    {{ form_start(form) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.city) }}
                    
                </div>
                <div class="col-md-6">
                {{ form_row(form.email) }}
                    {{ form_row(form.password.first) }}
                    {{ form_row(form.password.second) }}                
                </div>
                {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
            <hr>
            <p class="text-center mt-3">Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
        </div>
    </div>
</div>
{% endblock %}